    {
      "name": "KubernetesSignozClickhouseCluster",
      "description": "*\n **KubernetesSignozClickhouseCluster** defines the clustering configuration for ClickHouse.\n Clustering enables distributed data storage and high availability through sharding and replication.\n Note: Clustering requires Zookeeper to be configured.",
      "protoType": "org.openmcf.provider.kubernetes.kubernetessignoz.v1.KubernetesSignozClickhouseCluster",
      "fields": [
        {
          "name": "IsEnabled",
          "jsonName": "isEnabled",
          "protoField": "is_enabled",
          "type": {
            "kind": "bool"
          },
          "description": "*\n Flag to enable or disable clustering mode for ClickHouse.\n When enabled, ClickHouse will be deployed in a distributed cluster configuration.\n Defaults to false.",
          "required": false
        },
        {
          "name": "ShardCount",
          "jsonName": "shardCount",
          "protoField": "shard_count",
          "type": {
            "kind": "int32"
          },
          "description": "*\n The number of shards in the ClickHouse cluster.\n Sharding distributes data across multiple nodes for horizontal scaling.\n Recommended: 2 or more for production.\n This value is ignored if clustering is not enabled.",
          "required": false
        },
        {
          "name": "ReplicaCount",
          "jsonName": "replicaCount",
          "protoField": "replica_count",
          "type": {
            "kind": "int32"
          },
          "description": "*\n The number of replicas for each shard.\n Replication provides data redundancy and high availability.\n Recommended: 2 for production.\n This value is ignored if clustering is not enabled.",
          "required": false
        }
      ]
    },
    {
      "name": "KubernetesSignozClickhouseContainer",
      "description": "*\n **KubernetesSignozClickhouseContainer** specifies the container configuration for ClickHouse.\n It includes replica count, resource allocations, and persistence settings.",
