{
  "name": "CivoBucket",
  "kind": "CivoBucket",
  "cloudProvider": "civo",
  "apiVersion": "civo.openmcf.org/v1",
  "description": "civo-bucket",
  "protoPackage": "org.openmcf.provider.civo.civobucket.v1",
  "protoFiles": {
    "api": "org/openmcf/provider/civo/civobucket/v1/api.proto",
    "spec": "org/openmcf/provider/civo/civobucket/v1/spec.proto"
  },
  "spec": {
    "name": "CivoBucketSpec",
    "fields": [
      {
        "name": "BucketName",
        "jsonName": "bucketName",
        "protoField": "bucket_name",
        "type": {
          "kind": "string"
        },
        "description": "bucket name (DNS-compatible, 3â€“63 chars)",
        "required": true,
        "validation": {
          "required": true,
          "minLength": 3,
          "maxLength": 63,
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        }
      },
      {
        "name": "Region",
        "jsonName": "region",
        "protoField": "region",
        "type": {
          "kind": "enum",
          "enumType": "org.openmcf.provider.civo.CivoRegion",
          "enumValues": [
            "lon1",
            "lon2",
            "fra1",
            "nyc1",
            "phx1",
            "mum1"
          ]
        },
        "description": "region code for the bucket",
        "required": true,
        "validation": {
          "required": true
        }
      },
      {
        "name": "VersioningEnabled",
        "jsonName": "versioningEnabled",
        "protoField": "versioning_enabled",
        "type": {
          "kind": "bool"
        },
        "description": "enable versioning for the bucket (disabled by default)",
        "required": false
      },
      {
        "name": "Tags",
        "jsonName": "tags",
        "protoField": "tags",
        "type": {
          "kind": "array",
          "elementType": {
            "kind": "string"
          }
        },
        "description": "tags to apply to the bucket (must be unique)",
        "required": false,
        "validation": {
          "unique": true
        }
      }
    ]
  }
}
