    {
      "name": "KubernetesOpenBaoHighAvailability",
      "description": "*\n KubernetesOpenBaoHighAvailability defines HA configuration with Raft integrated storage.",
      "protoType": "org.openmcf.provider.kubernetes.kubernetesopenbao.v1.KubernetesOpenBaoHighAvailability",
      "fields": [
        {
          "name": "Enabled",
          "jsonName": "enabled",
          "protoField": "enabled",
          "type": {
            "kind": "bool"
          },
          "description": "Enable High Availability mode with Raft integrated storage.\n When enabled, OpenBao uses Raft for both storage and leader election.\n Requires at least 3 replicas for proper Raft consensus.",
          "required": false
        },
        {
          "name": "Replicas",
          "jsonName": "replicas",
          "protoField": "replicas",
          "type": {
            "kind": "int32"
          },
          "description": "Number of HA replicas.\n Should be an odd number (3, 5, 7) for proper Raft consensus.\n Default: 3",
          "required": false,
          "validation": {
            "min": 3,
            "max": 10
          },
          "default": "3",
          "oneofGroup": "_replicas"
        }
      ]
    },
    {
      "name": "KubernetesOpenBaoIngress",
      "description": "*\n KubernetesOpenBaoIngress defines ingress configuration for OpenBao.\n When enabled, deploys Istio Gateway API resources (Certificate, Gateway, HTTPRoutes)\n for TLS-terminated external access with automatic HTTP-to-HTTPS redirect.",
      "protoType": "org.openmcf.provider.kubernetes.kubernetesopenbao.v1.KubernetesOpenBaoIngress",
      "fields": [
        {
          "name": "Enabled",
          "jsonName": "enabled",
          "protoField": "enabled",
          "type": {
            "kind": "bool"
          },
          "description": "Enable ingress for external access.",
          "required": false
        },
        {
          "name": "Hostname",
          "jsonName": "hostname",
          "protoField": "hostname",
          "type": {
            "kind": "string"
          },
          "description": "The full hostname for external access (e.g., \"openbao.example.com\").\n Required when enabled is true.",
          "required": false
        }
      ]
    },
    {
      "name": "KubernetesOpenBaoInjector",
      "description": "*\n KubernetesOpenBaoInjector defines the Agent Injector configuration.\n The injector enables automatic sidecar injection of OpenBao Agent containers into pods.",
      "protoType": "org.openmcf.provider.kubernetes.kubernetesopenbao.v1.KubernetesOpenBaoInjector",
      "fields": [
        {
          "name": "Enabled",
          "jsonName": "enabled",
          "protoField": "enabled",
          "type": {
            "kind": "bool"
          },
          "description": "Enable the OpenBao Agent Injector.\n When enabled, deploys a mutating webhook for automatic secret injection.",
          "required": false
        },
        {
          "name": "Replicas",
          "jsonName": "replicas",
          "protoField": "replicas",
          "type": {
            "kind": "int32"
          },
          "description": "Number of injector replicas.\n Default: 1",
          "required": false,
          "validation": {
            "min": 1,
            "max": 5
          },
          "default": "1",
          "oneofGroup": "_replicas"
        }
      ]
    },
    {
      "name": "KubernetesOpenBaoServerContainer",
      "description": "*\n KubernetesOpenBaoServerContainer defines the container specifications for the OpenBao server.",
      "protoType": "org.openmcf.provider.kubernetes.kubernetesopenbao.v1.KubernetesOpenBaoServerContainer",
      "fields": [
        {
          "name": "Replicas",
          "jsonName": "replicas",
          "protoField": "replicas",
          "type": {
            "kind": "int32"
          },
          "description": "Number of OpenBao server replicas.\n For standalone mode, this is typically 1.\n For HA mode, this should be 3 or more (odd numbers recommended for Raft consensus).",
          "required": false,
          "validation": {
            "min": 1,
            "max": 10
          }
        },
        {
          "name": "Resources",
          "jsonName": "resources",
          "protoField": "resources",
          "type": {
            "kind": "message",
            "messageType": "ContainerResources"
          },
          "description": "CPU and memory resources allocated to the OpenBao server container.",
          "required": false
        },
        {
          "name": "DataStorageSize",
          "jsonName": "dataStorageSize",
          "protoField": "data_storage_size",
          "type": {
            "kind": "string"
          },
          "description": "Size of the persistent volume for OpenBao data storage.\n Used for both standalone (file storage) and HA (Raft storage) modes.\n Example values: \"10Gi\", \"50Gi\", \"100Gi\"\n Must match Kubernetes storage size format.",
          "required": false,
          "validation": {
            "minLength": 1,
            "pattern": "^\\d+(\\.\\d+)?\\s?(Ki|Mi|Gi|Ti|Pi|Ei|K|M|G|T|P|E)$"
          }
        }
      ]
    }
  ]
