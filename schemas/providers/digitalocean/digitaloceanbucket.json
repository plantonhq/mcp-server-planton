{
  "name": "DigitalOceanBucket",
  "kind": "DigitalOceanBucket",
  "cloudProvider": "digitalocean",
  "apiVersion": "digital-ocean.openmcf.org/v1",
  "description": "digital-ocean-bucket",
  "protoPackage": "org.openmcf.provider.digitalocean.digitaloceanbucket.v1",
  "protoFiles": {
    "api": "org/openmcf/provider/digitalocean/digitaloceanbucket/v1/api.proto",
    "spec": "org/openmcf/provider/digitalocean/digitaloceanbucket/v1/spec.proto"
  },
  "spec": {
    "name": "DigitalOceanBucketSpec",
    "fields": [
      {
        "name": "BucketName",
        "jsonName": "bucketName",
        "protoField": "bucket_name",
        "type": {
          "kind": "string"
        },
        "description": "bucket name (DNS-compatible, 3â€“63 chars)",
        "required": true,
        "validation": {
          "required": true,
          "minLength": 3,
          "maxLength": 63,
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        }
      },
      {
        "name": "Region",
        "jsonName": "region",
        "protoField": "region",
        "type": {
          "kind": "enum",
          "enumType": "org.openmcf.provider.digitalocean.DigitalOceanRegion",
          "enumValues": [
            "nyc3",
            "sfo3",
            "fra1",
            "sgp1",
            "lon1",
            "tor1",
            "blr1",
            "ams3"
          ]
        },
        "description": "region slug (datacenter location for the bucket)",
        "required": true,
        "validation": {
          "required": true
        }
      },
      {
        "name": "AccessControl",
        "jsonName": "accessControl",
        "protoField": "access_control",
        "type": {
          "kind": "enum",
          "enumType": "org.openmcf.provider.digitalocean.digitaloceanbucket.v1.DigitalOceanBucketAccessControl",
          "enumValues": [
            "PUBLIC_READ"
          ]
        },
        "description": "access control setting for the bucket (private or public-read)",
        "required": false
      },
      {
        "name": "VersioningEnabled",
        "jsonName": "versioningEnabled",
        "protoField": "versioning_enabled",
        "type": {
          "kind": "bool"
        },
        "description": "enable versioning for the bucket (disabled by default)",
        "required": false
      },
      {
        "name": "Tags",
        "jsonName": "tags",
        "protoField": "tags",
        "type": {
          "kind": "array",
          "elementType": {
            "kind": "string"
          }
        },
        "description": "tags to apply to the bucket (must be unique)",
        "required": false,
        "validation": {
          "unique": true
        }
      }
    ]
  }
}
